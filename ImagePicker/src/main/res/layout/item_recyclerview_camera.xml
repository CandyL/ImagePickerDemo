<?xml version="1.0" encoding="utf-8"?>
<com.mellivora.imagepicker.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:layout_margin="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <com.mellivora.imagepicker.view.SquareImageView
            android:id="@+id/iv_item_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon_image_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/take_photo"
            android:visibility="gone"
            android:textColor="@color/text_color_white"
            android:textSize="14sp" />

    </LinearLayout>


</com.mellivora.imagepicker.view.SquareRelativeLayout>